@model Gestion_Reportes.Models.Reporte

@{
    ViewData["Title"] = "VistaReporte";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="app-title">
    <h1 class="text-danger text-center">
        Reporte @ViewBag.NombreReporte
    </h1>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="tile" style="padding: 20px; background-color: #f8f9fa; border-radius: 10px;">
                <div class="card" style="height: 500px;">
                    <div class="card-header bg-primary text-white text-center">
                        @ViewBag.NombreReporte
                    </div>
                    <div class="card-body" style="padding: 0; height: calc(100% - 56px);">
                        <div style="height: 100%; width: 100%;">
                            <br />
                            <iframe class="embed-responsive-item"
                                    src="@ViewBag.UrlReporte"
                                    style="border: none; width: 100%; height: 100%;"
                                    allowfullscreen>
                            </iframe>
                        </div>
                    </div>
                </div>

                <hr />
                <div class="row text-center">
                    <div class="col-lg-12">
                        <a asp-action="PanelReportes" class="btn btn-danger btn-lg">
                            <i class="far fa-share-square fa-lg fa-fw"></i> Regresar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>